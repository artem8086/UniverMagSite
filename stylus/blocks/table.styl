.table
	display table
	width 100%
	
	&__row
		display table-row
		&:nth-of-type(odd)
			background-color #eee
		&:hover
			background-color #ddd

	&__cell
	&__head
		padding 6px 10px
		display table-cell
		border-top 1px solid #fff
		border-bottom 1px solid #fff
		vertical-align middle
		font-size 18px
	&__head
		width 25%
		text-align right
		border-right 2px solid  #fff
	&__cell
		text-align left
		color #333