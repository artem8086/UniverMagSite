.preloader
	position absolute
	top 0
	left 0
	width 100%
	height 100vh
	display flex
	z-index 10
	visibility visible
	transition 1.5s all

	&__wrapper
		margin auto
		text-align center

	.loader
		margin auto
		padding 40px 60px
		transform-origin center
		font-size 26px
		box-shadow 0 0 3px rgba(1,1,1,0.5)
		user-select none

	&.done
		opacity 0
		visibility hidden
		.loader
			visibility hidden
