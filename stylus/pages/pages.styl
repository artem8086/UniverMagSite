.container
	h1
		text-align center
		font-size 26px
		font-weight 700
		padding 4px 0 16px
	h2
		margin 20px 0 10px
		font-size 22px
		font-weight 700
		text-indent 25pt
		color #555
	p
		padding 4px 0
		text-align justify
		text-indent 25pt
		font-size 18px
		line-height 20px

		&.comment
			padding 10px 20px
			font-size 16px
			line-height 18px
			text-indent 0
			background-color #bbb

.content-list
	padding-left 20px
	li
		list-style-type none

.img
	padding 20px
	width 100%
	text-align center
	
	&__image
		max-width 100%

	&__caption
		display block
		padding-top 20px
		font-style italic

.no-indent
	text-indent 0 !important

ul.no-mark
	list-style-type none

ul
ol
	padding 6px 18px
	li
		padding 3px 0

.links
	li
		margin-bottom 12px
	p
		padding-left 25pt
		text-indent 0

hr
	margin-bottom 10px
	height 1px
	border none

.search-container
	overflow auto
	text-align center
	margin-bottom 40px

table.search
	width 100%
	border-collapse collapse
	text-align center
	padding 0


table.search tr td
	border 1pt solid black
	padding 3pt

table.search td.c1
	width 52%
	text-align left
	padding-left 10pt
	color #150146
	font-size 15pt
  
table.search td.cn
	width 12%
	text-align center

table.search td.cspan
	padding 15pt 5pt 5pt 0

table.search tr.odd
	background-color white
table.search tr.even
	background-color #f5f5f5

table.search tr.odd:hover
	background-color #eefbff

table.search tr.even:hover
	background-color: #deebef

table.search td.cspan p
	color black
	font bold 13pt Century Gothic, serif
	text-indent 10pt
	margin 0
  
table.search td.cn a
	font-size 13pt
	font-weight bold
	color mediumblue

table.search td.cn a:visited
	color mediumblue
table.search td.cn a:hover
	color firebrick
