@import 'helpers/*'

@import 'blocks/*'

@import 'media/*'

body
	background-color #ddd
	
.screen
	position absolute
	top 0
	left 0
	width 100%
	height 100%

.zx-border
	position relative
	background-color #fff
	border 2px solid #000
	border-top 20px solid #000
	box-shadow 0 0 8px rgba(1,1,1,0.7)
	&:before
		display block
		content ''
		position absolute
		top -20px
		right 40px
		width 80px
		height 20px
		background #000 linear-gradient(to right, #f00, #f00 25%, #ff0 25%, #ff0 50%, #0f0 50%, #0f0 75%, #00f 75%, #00f)
		transform skewX(-45deg)

.clearfix
	clearfix()

.left
	float left

.right
	float right

.overlay
	overflow hidden