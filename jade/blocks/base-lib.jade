include ../locales/localization

- lang = 'ru'

include ../../node_modules/bemto.jade/bemto
include ../../node_modules/jade-injected/jade-injected

- set_bemto_settings({ modifier: '--' })

include main-menu
include images

mixin lib(name, authors)
	doctype html
	html(lang=lang)
		head
			meta(http-equiv='Content-Type' content='text/html; charset=utf-8')
			title!= locale('library') + ' &ndash; ' + locale(authors) + ' &ndash; ' + locale(name)
			meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, minimal-ui')

			meta(name='author' content=locale('author_full_name'))
			link(rel="icon" type='image/png' href='../images/masters_i.png')

			link(rel='stylesheet' href='../css/main.css')
		body
			.header.container-wrapper
				.container
					include lib-header

			.content.container-wrapper
				.container.library
					block

			.footer.container-wrapper
				.container
					include footer

			script(src="https://code.jquery.com/jquery-3.3.1.min.js")
			script(src='../js/main.js')