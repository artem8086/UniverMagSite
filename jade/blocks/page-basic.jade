include ../../node_modules/bemto.jade/bemto
include ../../node_modules/jade-injected/jade-injected

- set_bemto_settings({ modifier: '--' })

include main-menu
include helpers

mixin page(lang_links)
	- var langLinks = lang_links

	doctype html
	html(lang=lang)
		head
			meta(http-equiv='Content-Type' content='text/html; charset=utf-8')
			title!= locale('author_full_name') + ' &ndash; ' + locale('thesis')
			meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, minimal-ui')

			meta(name='author' content=locale('author_full_name'))
			link(rel="icon" type='image/png' href='images/masters_i.png')

			link(rel='stylesheet' href='css/main.css')
			style .hidden {display: none;}
		body(
			data-default-page="#summary"
			data-title!=' &ndash; ' + locale('author_full_name') + ' &ndash; ' + locale('thesis')
		)
			.header.container-wrapper.js-loader.hidden
				.container
					include header

			.main-menu.container-wrapper.js-loader.hidden
				.container
					+main-menu('menu-button')
				
			.content.container-wrapper.js-loader.hidden
				block

			.footer.container-wrapper.js-loader.hidden
				.container
					include footer

			include ../blocks/preloader


			script(src="https://code.jquery.com/jquery-3.3.1.min.js")
			script(src='js/main.js')